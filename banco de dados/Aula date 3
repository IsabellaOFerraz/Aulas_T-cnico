SELECT * FROM FUNCIONARIO;

1-SELECT * FROM FUNCIONARIO WHERE extract(YEAR FROM datanasc)= 1983;

2-SELECT * FROM FUNCIONARIO WHERE extract(YEAR FROM datadesl)= 2016;

3-SELECT * FROM FUNCIONARIO WHERE extract(MONTH FROM dataadm)= 1 AND extract(YEAR FROM dataadm)= 2000 ORDER BY dataadm ASC;

4-Select nome, floor( months_between (sysdate,datanasc)/12) as IDADE from FUNCIONARIO where months_between(sysdate,datanasc)/12 > 35;

5-Select nome, floor( months_between (sysdate,dataadm)/12) as tempo_de_empresa from FUNCIONARIO where months_between(sysdate,dataadm)/12 > 6;

6-Select nome, floor( months_between (sysdate,dataadm)/12) as tempo_de_empresa from FUNCIONARIO where months_between(sysdate,dataadm)/12 < 2 ;

7-Select nome, TO_CHAR(datadesl,'DY-DD-MON-YYYY') AS data_desligamento FROM FUNCIONARIO WHERE datadesl IS NOT NULL ORDER BY nome ASC;


