CREATE TABLE FUNCIONARIO(
    codfunc NUMBER(4)PRIMARY KEY,
    nome VARCHAR(30)NOT NULL,
    dataadm DATE NOT NULL,
    datadesl DATE,
    datanasc DATE NOT NULL
);

DESC FUNCIONARIO;

